/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.invite-input,
.phone-input {
  width: 100%;
  height: 90rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 45rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.login-btn,
.phone-login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  color: #667eea;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-btn::after,
.phone-login-btn::after {
  border: none;
}

.phone-login-btn {
  background-color: rgba(255, 255, 255, 0.85);
  color: #764ba2;
}

.login-footer {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.link {
  color: #fff;
  text-decoration: underline;
}

/* Agent confirmation modal styles */
.agent-confirm-modal {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
}

.modal-content {
  width: 560rpx;
  height: 400rpx;
  background: linear-gradient(135deg, #e8f4f8 0%, #d0e5ec 100%);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -200rpx;
  margin-left: -280rpx;
}

.modal-header {
  height: 100rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  letter-spacing: 1rpx;
  line-height: 1.3;
}

.modal-close {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b6b;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #4a90d9;
  width: 160rpx;
  display: block;
  margin-left: 24rpx;
}

.form-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff8c00;
  width: 120rpx;
  display: block;
  margin-left: 12rpx;
}

.form-tips {
  font-size: 26rpx;
  color: #6eb7ff;
  line-height: 1.5;
  padding: 16rpx;
  display: block;
}

.modal-footer {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}

.cancel-btn,
.confirm-btn {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  border-radius: 30rpx;
}

.cancel-btn {
  background: linear-gradient(135deg, #c0392b 0%, #e74c3c 100%);
  color: #ecf0f1;
}

.confirm-btn {
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  color: #ecf0f1;
}