/* pages/my-agent/my-agent.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8eeff 0%, #f0f2f8 50%, #f5f5f5 100%);
  justify-content: flex-start;
  padding-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 代理信息卡片 */
.agent-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx 0;
  border-radius: 0;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.15);
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.agent-info-card::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.agent-info-card::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  left: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.agent-level {
  text-align: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 48rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  position: relative;
}

.level-badge::before {
  content: '★';
  margin-right: 8rpx;
  font-size: 32rpx;
}

.level-badge.level1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb300 100%);
  color: #8b4513;
  box-shadow: 0 8rpx 24rpx rgba(255, 215, 0, 0.4);
}

.level-badge.level2 {
  background: linear-gradient(135deg, #e8e8e8 0%, #c0c0c0 100%);
  color: #555;
  box-shadow: 0 8rpx 24rpx rgba(192, 192, 192, 0.4);
}

/* 统计数据 */
.agent-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
  padding: 32rpx 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.25);
  letter-spacing: 2rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.stat-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 邀请码区域 */
.invite-section {
  margin-top: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1;
}

.invite-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
  font-weight: 500;
}

.invite-code-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.invite-code {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 6rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.copy-btn {
  background: #fff;
  color: #667eea;
  font-size: 26rpx;
  padding: 10rpx 28rpx;
  border-radius: 24rpx;
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  position: relative;
  z-index: 1;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 28rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.action-btn:active::before {
  opacity: 1;
}

.action-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.action-icon-text {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.action-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

/* Tab切换 */
.tabs {
  display: flex;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 0;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  padding: 10rpx;
  gap: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.tab-item.active {
  color: #667eea;
  font-weight: bold;
  background: linear-gradient(135deg, #f0f4ff 0%, #e8efff 100%);
  box-shadow: 0 2rpx 12rpx rgba(102, 126, 234, 0.15);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 7rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

/* 团队列表 */
.team-list {
  margin: 0;
  padding: 0;
  width: 100%;
  justify-content: flex-start; 
  box-sizing: border-box;
  background: #fff;
}

.team-item {
  background: #fff;
  border-radius: 0;
  padding: 28rpx 30rpx;
  margin-bottom: 0;
  display: flex;
  flex-direction: column;
  box-shadow: none;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.team-item:last-child {
  border-bottom: none;
}

.team-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.team-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.team-item:active::before {
  opacity: 1;
}

/* 团队成员头部 */
.member-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.member-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f0f4ff 100%);
  border: 3rpx solid #f5f5f5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.member-details {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  letter-spacing: 0.5rpx;
}

.member-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meta-text {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.member-type {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.type-badge {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 18rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  line-height: 1;
}

.type-badge::before {
  content: '●';
  margin-right: 6rpx;
  font-size: 16rpx;
  line-height: 1; 
}

.type-badge.agent {
  background: linear-gradient(135deg, #e3f2fd 0%, #e8efff 100%);
  color: #1976d2;
  border: 1rpx solid #bbdefb;
}

.type-badge.vip {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe8cc 100%);
  color: #f57c00;
  border: 1rpx solid #ffcc80;
}

.type-badge.normal {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666;
  border: 1rpx solid #e0e0e0;
}

/* 团队成员底部 */
.member-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.footer-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.footer-label {
  font-size: 22rpx;
  color: #999;
}

.footer-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.join-time {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.member-earnings,
.member-consume {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.earnings-label,
.consume-label {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.earnings-value {
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff5722 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 0.5rpx;
}

.consume-value {
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 0.5rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 140rpx 0;
  background: #fff;
  border-radius: 0;
  box-shadow: none;
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.empty-state::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.03) 0%, transparent 70%);
  border-radius: 50%;
}

.empty-icon-wrap {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  border-radius: 50%;
  margin-bottom: 28rpx;
  opacity: 0.8;
  filter: drop-shadow(0 6rpx 16rpx rgba(0, 0, 0, 0.08));
  animation: float 3s ease-in-out infinite;
  position: relative;
  z-index: 1;
}

.empty-icon-text {
  font-size: 80rpx;
  color: #999;
  font-weight: 500;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-12rpx) scale(1.02);
  }
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  font-weight: 500;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #bbb;
  position: relative;
  z-index: 1;
}

/* 邀请弹窗 */
.invite-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -48%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 1rpx;
}

.modal-close {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: transform 0.2s;
}

.modal-close:active {
  transform: rotate(90deg);
}

.modal-body {
  padding: 40rpx 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #667eea;
  background: #f8f9ff;
}

.form-tips {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9800;
  margin-top: 24rpx;
}

.form-tips text {
  font-size: 24rpx;
  color: #e65100;
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  border-radius: 0;
  margin: 0;
  padding: 0;
}

.cancel-btn {
  color: #666;
  background: #fff;
}

.cancel-btn:active {
  background: #f5f5f5;
}

.confirm-btn {
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-left: 1rpx solid #f0f0f0;
}

.confirm-btn:active {
  opacity: 0.9;
}

scroll-view {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* 避免垂直居中 */
}

/* 申请列表样式 */
.application-item {
  background: #fff;
  border-radius: 0;
  padding: 28rpx 30rpx;
  margin-bottom: 0;
  display: flex;
  flex-direction: column;
  box-shadow: none;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.application-item:last-child {
  border-bottom: none;
}

.application-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.application-user {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 0.5rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.status-badge.status-0 {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe8cc 100%);
  color: #f57c00;
  border: 1rpx solid #ffcc80;
}

.status-badge.status-1 {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
  border: 1rpx solid #a5d6a7;
}

.status-badge.status-2 {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #c62828;
  border: 1rpx solid #ef9a9a;
}

.application-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-row {
  display: flex;
  gap: 32rpx;
}

.detail-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-item.full-width {
  flex: auto;
}

.detail-label {
  font-size: 22rpx;
  color: #999;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.detail-value.reject-reason {
  color: #c62828;
  line-height: 1.5;
}