/* pages/checkout/checkout.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
  align-items: stretch;
  justify-content: flex-start;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 收货地址 */
.address-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.address-content {
  display: flex;
  align-items: flex-start;
}

.address-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.address-info {
  flex: 1;
}

.receiver-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.receiver-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.receiver-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.arrow-icon {
  font-size: 48rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.no-address {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.no-address-icon {
  font-size: 48rpx;
  color: #1989fa;
  margin-right: 16rpx;
}

.no-address-text {
  font-size: 28rpx;
  color: #1989fa;
}

/* 商品列表 */
.products-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.products-list {
  padding-top: 10rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.price-quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.price-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.price {
  font-size: 30rpx;
  color: #ff4444;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.quantity {
  font-size: 26rpx;
  color: #999;
}

.stock-tip {
  font-size: 22rpx;
  color: #ff9500;
  margin-top: 8rpx;
}

/* 积分抵扣 */
.integral-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.integral-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.integral-input-wrapper {
  display: flex;
  align-items: center;
}

.integral-input {
  width: 140rpx;
  height: 60rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  text-align: right;
}

.integral-unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
}

.use-all-btn {
  font-size: 24rpx;
  color: #1989fa;
  margin-left: 16rpx;
  padding: 8rpx 16rpx;
  background-color: #e3f2fd;
  border-radius: 8rpx;
}

.integral-tip {
  font-size: 22rpx;
  color: #999;
  text-align: right;
}

/* 订单备注 */
.remark-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.remark-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

/* 价格明细 */
.price-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-section .price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-section .price-row:last-child {
  margin-bottom: 0;
}

.price-section .label {
  font-size: 26rpx;
  color: #666;
}

.price-section .value {
  font-size: 26rpx;
  color: #333;
}

.price-section .saved {
  color: #ff9500;
}

.price-section .deduct {
  color: #07c160;
}

.price-section .free {
  color: #07c160;
  font-weight: bold;
}

.price-section .freight-tip {
  font-size: 22rpx;
  color: #ff9500;
  text-align: right;
  margin-top: -8rpx;
  margin-bottom: 8rpx;
}

.price-section .total {
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 8rpx;
}

.price-section .total .label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.price-section .total .amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
}

/* 底部栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.total-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.total-label-group {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.total-label {
  font-size: 24rpx;
  color: #666;
}

.original-total {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
}

.submit-btn {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 60rpx;
  background: linear-gradient(135deg, #ff9500 0%, #ff6600 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
}
