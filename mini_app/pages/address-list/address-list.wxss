/* pages/address-list/address-list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 0 120rpx 0;
  align-items: stretch;
  justify-content: flex-start;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 默认标签 */
.default-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #ff9500 0%, #ff6600 100%);
  color: #fff;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  border-radius: 0 16rpx 0 20rpx;
}

/* 地址信息 */
.address-info {
  margin-bottom: 20rpx;
}

.receiver-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.receiver-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.receiver-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.address-tag {
  color: #ff9500;
  font-weight: bold;
  margin-right: 8rpx;
}

/* 操作按钮 */
.address-actions {
  display: flex;
  gap: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.edit-btn {
  background-color: #fff9e6;
  color: #ff9500;
  border: 1rpx solid #ffd700;
}

.delete-btn {
  background-color: #ffebee;
  color: #f44336;
  border: 1rpx solid #ffcdd2;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 60rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #bbb;
}

/* 添加按钮 */
.add-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.add-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #42a5f5 0%, #1989fa 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-button::after {
  border: none;
}

.add-icon {
  font-size: 40rpx;
  margin-right: 8rpx;
  font-weight: normal;
}
