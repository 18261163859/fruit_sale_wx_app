/* 积分记录页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 页面标题 */
.header {
  color: black;
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 统计信息 */
.stats-section {
  background: white;
  margin: 0;
  padding: 40rpx 30rpx;
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
}

.stats-card {
  text-align: center;
}

.stats-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1989fa;
}

/* 筛选标签 */
.filter-section {
  background: white;
  margin: 0;
  padding: 30rpx;
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
}

.filter-tabs {
  display: flex;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 8rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #1989fa;
  color: white;
  font-weight: bold;
}

/* 记录列表 */
.records-section {
  margin: 0;
  width: 100%;
  background: white;
}

.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
  background: white;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  background: white;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.records-list {
  background: white;
}

.record-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.record-left {
  flex: 1;
  min-width: 0;
}

.record-type {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.record-remark {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-right {
  text-align: right;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.record-amount.positive {
  color: #52c41a;
}

.record-amount.negative {
  color: #ff4d4f;
}

.record-balance {
  font-size: 24rpx;
  color: #999;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx 0 60rpx;
  width: 100%;
  color: #999;
  font-size: 26rpx;
}