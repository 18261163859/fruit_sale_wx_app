/* pages/shipping-list/shipping-list.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding-bottom: 20rpx;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  justify-content: flex-start;
}

/* Tab切换 */
.tabs {
  display: flex;
  background: linear-gradient(180deg, #ffffff 0%, #fafbfc 100%);
  padding: 16rpx 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  gap: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  color: #8c8c8c;
  position: relative;
  transition: all 0.3s ease;
  font-weight: 500;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  overflow: hidden;
}

.tab-item.active {
  color: #fff;
  font-weight: 700;
  background: linear-gradient(135deg, #1989fa 0%, #0d7de0 100%);
  box-shadow: 0 6rpx 20rpx rgba(25, 137, 250, 0.35);
  transform: translateY(-2rpx);
}

.tab-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
  pointer-events: none;
}

/* 订单列表 */
.order-list {
  padding: 24rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 24rpx;
}

.order-no {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.order-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.order-status.pending {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  color: #ff9800;
  border: 2rpx solid #ffecb3;
}

.order-status.shipped {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #4caf50;
  border: 2rpx solid #a5d6a7;
}

/* 收货地址 */
.address-section {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f0f8ff 0%, #e8f4ff 100%);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #d6ebff;
}

.address-icon {
  font-size: 40rpx;
}

.address-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.receiver-row {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.receiver-name {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.receiver-phone {
  font-size: 28rpx;
  color: #595959;
  background-color: rgba(25, 137, 250, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.address-text {
  font-size: 28rpx;
  color: #595959;
  line-height: 1.8;
}

/* 快递信息 */
.logistics-info {
  padding: 24rpx;
  background: linear-gradient(135deg, #f0f8ff 0%, #e3f2fd 100%);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #bbdefb;
}

.logistics-row {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.logistics-row:last-child {
  margin-bottom: 0;
}

.logistics-label {
  color: #8c8c8c;
  min-width: 180rpx;
  font-weight: 500;
}

.logistics-value {
  color: #1a1a1a;
  flex: 1;
  word-break: break-all;
}

/* 商品列表 */
.product-list {
  border-top: 2rpx solid #f5f5f5;
  padding-top: 24rpx;
  margin-bottom: 24rpx;
}

.product-item {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  color: #1a1a1a;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 500;
}

.product-spec {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 8rpx;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  display: inline-block;
  align-self: flex-start;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #ff5722;
  font-weight: 700;
}

.product-quantity {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  border-top: 2rpx solid #f5f5f5;
  padding-top: 24rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.order-time {
  font-size: 24rpx;
  color: #8c8c8c;
}

.order-amount {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.ship-btn,
.detail-btn {
  padding: 18rpx 48rpx;
  font-size: 28rpx;
  border-radius: 24rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.ship-btn {
  background: linear-gradient(135deg, #1989fa 0%, #0d7de0 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.ship-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.2);
}

.detail-btn {
  background-color: #f5f5f5;
  color: #595959;
  border: 2rpx solid #e8e8e8;
}

.detail-btn:active {
  background-color: #e8e8e8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 0;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
  filter: grayscale(0.3);
}

.empty-text {
  font-size: 30rpx;
  color: #8c8c8c;
}
