/* pages/search/search.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f7f8fa;
  box-sizing: border-box;
  justify-content: flex-start;
  margin-top: 0;
  padding-top: 0;
}

/* 搜索框 */
.search-box {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f0f0f0;
  /* flex-shrink: 0; */
  /* top: 0; */
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  transition: all 0.3s ease;
}

.search-input-wrapper:active {
  background-color: #ebebeb;
}

.search-icon {
  margin-right: 10rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 100%;
  color: #333;
}

.clear-icon {
  flex-shrink: 0;
  margin-left: 10rpx;
  padding: 8rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #1989fa;
  padding: 10rpx 0 10rpx 20rpx;
  font-weight: 500;
}

/* 搜索建议区域 */
.suggestions {
  padding: 20rpx 30rpx 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 12rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: flex-start;
  justify-content: flex-start;
}

.tag {
  padding: 16rpx 28rpx;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 1rpx solid #f0f0f0;
}

.tag:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.hot-tag {
  background: linear-gradient(135deg, #fff3e6 0%, #ffe8cc 100%);
  color: #ff6b00;
  border: 1rpx solid #ffd699;
  font-weight: 500;
}

.history-section {
  margin-bottom: 40rpx;
}

.hot-section {
  margin-bottom: 20rpx;
}

/* 搜索结果 */
.search-result {
  padding: 20rpx 30rpx;
}

.result-header {
  padding: 20rpx 0;
}

.result-count {
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

/* 商品列表 */
.product-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.product-item {
  display: flex;
  align-items: flex-start;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding: 24rpx;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
  margin-right: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  position: relative;
  padding-right: 60rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 42rpx;
  margin-bottom: 12rpx;
}

.product-footer {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: auto;
}

.price-wrapper {
  display: flex;
  align-items: baseline;
}

.price-group {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.product-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
}

.product-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.vip-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #fbbf24;
}

.vip-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
}

.add-cart-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1989fa 0%, #0d6efd 100%);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.4);
  transition: all 0.3s ease;
}

.add-cart-btn:active {
  transform: scale(0.9);
}

.add-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}

/* 加载状态 */
.loading-wrapper {
  padding: 80rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-image {
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto 30rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}
