/* pages/address-edit/address-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 0 120rpx 0;
  align-items: stretch;
  justify-content: flex-start;
}

/* 表单容器 */
.form-container {
  padding: 20rpx;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

/* 表单项 */
.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.form-input {
  font-size: 28rpx;
  color: #333;
  width: 100%;
}

.form-input::placeholder {
  color: #ccc;
}

.form-textarea {
  font-size: 28rpx;
  color: #333;
  width: 100%;
  min-height: 120rpx;
  line-height: 1.6;
}

.form-textarea::placeholder {
  color: #ccc;
}

/* 选择器样式 */
.picker-item {
  padding: 0;
}

.picker-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 36rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 地址标签 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx 0;
}

.tag-item {
  flex: 0 0 calc(25% - 15rpx);
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.tag-item.active {
  background-color: #fff9e6;
  color: #ff9500;
  border-color: #ffd700;
  font-weight: bold;
}

/* 默认地址行 */
.default-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.default-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.default-switch {
  transform: scale(0.9);
}

/* 保存按钮 */
.save-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #42a5f5 0%, #1989fa 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
  border: none;
}

.save-button::after {
  border: none;
}
