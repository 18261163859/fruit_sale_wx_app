/* pages/cart/cart.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* Êñ∞Âπ¥‰∏ªÈ¢òËÉåÊôØ */
.container[data-theme="newyear"] {
  background-color: #FFF8F0;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(230, 57, 70, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 215, 0, 0.05) 0%, transparent 50%);
}

.cart-content {
  display: flex;
  flex-direction: column;
}

/* ÂÖ®ÈÄâÊ†è */
.select-all-bar {
  background-color: #fff;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
}

.select-all-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.cart-list {
  padding: 0 20rpx;
}

.cart-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  display: flex;
  align-items: flex-start;
  position: relative;
}

/* Êñ∞Âπ¥‰∏ªÈ¢òË¥≠Áâ©ËΩ¶È°π */
.cart-item[data-theme="newyear"] {
  background: linear-gradient(to right, #FFFEF7 0%, #FFF8F0 100%);
  border: 2rpx solid #FFD700;
  box-shadow: 0 4rpx 16rpx rgba(230, 57, 70, 0.1),
              0 0 8rpx rgba(255, 215, 0, 0.15);
}

.cart-item[data-theme="newyear"]::before {
  content: 'üéâ';
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 28rpx;
  opacity: 0.25;
}

/* ÂïÜÂìÅÂ§çÈÄâÊ°Ü */
.item-checkbox {
  display: flex;
  align-items: center;
  padding-right: 16rpx;
  padding-top: 60rpx;
}

.item-info {
  display: flex;
  flex: 1;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.item-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  display: inline-block;
  align-self: flex-start;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.item-price {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}

.item-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.vip-badge {
  font-size: 20rpx;
  color: #ff9500;
  padding: 2rpx 8rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fffbf0 100%);
  border-radius: 6rpx;
  border: 1rpx solid #ffd700;
}

.item-vip-price {
  font-size: 22rpx;
  color: #ff9500;
  padding: 2rpx 10rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fffbf0 100%);
  border-radius: 8rpx;
  border: 1rpx solid #ffd700;
  align-self: flex-start;
}

.item-actions {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  background-color: #fff;
  transition: all 0.2s;
}

.quantity-btn:active {
  background-color: #f5f5f5;
  border-color: #1989fa;
  color: #1989fa;
}

.quantity {
  min-width: 60rpx;
  margin: 0 20rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight: 500;
}

/* Á©∫Ë¥≠Áâ©ËΩ¶ */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #42a5f5 0%, #1989fa 100%);
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);

  display: flex;
  align-items: center;      /* ÂûÇÁõ¥Â±Ö‰∏≠ */
  justify-content: center;  /* Ê∞¥Âπ≥Â±Ö‰∏≠ */
}

/* Â∫ïÈÉ®ÁªìÁÆóÊ†è */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  z-index: 100;
}

.footer-checkbox {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.select-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.footer-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 20rpx;
}

.total-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.total-label {
  font-size: 24rpx;
  color: #666;
}

.total-price {
  font-size: 36rpx;
  color: #ff4444;
  font-weight: bold;
}

.selected-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.checkout-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: linear-gradient(135deg, #ff9500 0%, #ff6600 100%);
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 102, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

/* Êñ∞Âπ¥‰∏ªÈ¢òÁªìÁÆóÊåâÈíÆ */
.checkout-btn[data-theme="newyear"] {
  background: linear-gradient(135deg, #E63946 0%, #C1121F 100%);
  box-shadow: 0 6rpx 16rpx rgba(230, 57, 70, 0.4),
              0 0 12rpx rgba(255, 215, 0, 0.3);
  border: 2rpx solid #FFD700;
  position: relative;
  overflow: hidden;
}

.checkout-btn[data-theme="newyear"]::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 215, 0, 0.3) 50%, transparent 70%);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.checkout-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.checkout-btn[disabled] {
  background: #e0e0e0;
  box-shadow: none;
  color: #999;
}
