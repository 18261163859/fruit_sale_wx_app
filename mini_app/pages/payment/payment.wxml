<!--pages/payment/payment.wxml-->
<view class="container">
  <!-- 支付状态图标 -->
  <view class="payment-icon">
    <view class="icon-circle">💳</view>
  </view>

  <!-- 支付金额 -->
  <view class="amount-section">
    <text class="amount-label">支付金额</text>
    <text class="amount-value">¥{{amount}}</text>
  </view>

  <!-- 订单信息 -->
  <view class="order-info">
    <view class="info-row">
      <text class="label">订单号</text>
      <text class="value">{{orderNo}}</text>
    </view>
    <view class="info-row">
      <text class="label">下单时间</text>
      <text class="value">{{createTime}}</text>
    </view>
  </view>

  <!-- 支付提示 -->
  <view class="payment-tip">
    <text class="tip-text">这是模拟支付，请选择操作</text>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="btn cancel-btn" bindtap="cancelPayment">
      取消支付
    </button>
    <button class="btn pay-btn" bindtap="confirmPayment" disabled="{{loading}}">
      {{loading ? '支付中...' : '确认支付'}}
    </button>
  </view>

  <!-- 底部说明 -->
  <view class="bottom-tip">
    <text>• 点击"确认支付"订单将变为待发货状态</text>
    <text>• 点击"取消支付"可稍后在订单列表中继续支付</text>
  </view>
</view>
