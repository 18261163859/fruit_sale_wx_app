/* ‰ºöÂëòË∫´‰ªΩÂç°Áâá */
.member-card {
  margin: 20rpx 30rpx;
  padding: 32rpx 28rpx;
  border-radius: 20rpx;
  width: calc(100% - 60rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* Ê∑ªÂä†ÂÖâÊ≥ΩÊïàÊûú */
.member-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
}

.member-card.normal-theme {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
}

.member-card.vip-theme {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  border: 2rpx solid rgba(251, 191, 36, 0.6);
  box-shadow: 0 8rpx 24rpx rgba(251, 191, 36, 0.3);
}

.member-card.newyear-theme {
  background: linear-gradient(135deg, #E63946 0%, #C1121F 100%);
  border: 3rpx solid #FFD700;
  box-shadow: 0 12rpx 32rpx rgba(230, 57, 70, 0.4),
              0 0 20rpx rgba(255, 215, 0, 0.3);
  position: relative;
  overflow: hidden;
}

/* Êñ∞Âπ¥‰∏ªÈ¢òÊ∑ªÂä†Ë£ÖÈ•∞ÂÖÉÁ¥† */
.member-card.newyear-theme::after {
  content: 'üßß';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  font-size: 120rpx;
  opacity: 0.15;
  transform: rotate(15deg);
}

.member-card.newyear-theme::before {
  background: radial-gradient(circle, rgba(255,215,0,0.2) 0%, transparent 70%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.member-normal {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.member-vip {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

.member-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
  gap: 8rpx;
}

.member-label {
  font-size: 34rpx;
  font-weight: bold;
