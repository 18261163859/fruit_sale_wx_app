/* pages/order-list/order-list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding: 0;
  align-items: stretch;
  justify-content: flex-start;
}

/* Tab栏 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  position: relative;
}

.tab-name {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #1989fa;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1989fa;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  padding: 00rpx;
}

.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.order-card:active {
  transform: scale(0.98);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  white-space: nowrap;
}

.order-status-tag.pending-payment {
  background: linear-gradient(135deg, #fff4e6 0%, #ffe8cc 100%);
  color: #ff9500;
  border: 1rpx solid #ffd699;
}

.order-status-tag.pending-ship {
  background: linear-gradient(135deg, #e3f2fd 0%, #d0ebff 100%);
  color: #1989fa;
  border: 1rpx solid #a5d8ff;
}

.order-status-tag.shipped {
  background: linear-gradient(135deg, #e8f5e9 0%, #d4edda 100%);
  color: #07c160;
  border: 1rpx solid #a8e6ae;
}

.order-status-tag.completed {
  background: linear-gradient(135deg, #f5f5f5 0%, #e9ecef 100%);
  color: #999;
  border: 1rpx solid #ddd;
}

.order-status-tag.cancelled {
  background: linear-gradient(135deg, #f5f5f5 0%, #e9ecef 100%);
  color: #999;
  border: 1rpx solid #ddd;
}

/* 商品列表 */
.products-section {
  padding: 20rpx 30rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f8f8f8;
  border: 1rpx solid #f0f0f0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.price {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}

.quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  background-color: #fafafa;
}

.footer-content {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.amount-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.items-count {
  font-size: 24rpx;
  color: #999;
}

.amount-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.amount-label {
  font-size: 24rpx;
  color: #666;
}

.amount-value {
  font-size: 36rpx;
  color: #ff4444;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.btn {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.btn::after {
  border: none;
}

.btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.cancel-btn {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #e5e5e5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.pay-btn {
  background: linear-gradient(135deg, #ff9500 0%, #ff6600 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 102, 0, 0.3);
}

.confirm-btn {
  background: linear-gradient(135deg, #42a5f5 0%, #1989fa 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.detail-btn {
  background-color: #fff;
  color: #1989fa;
  border: 1rpx solid #1989fa;
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.1);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-state,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}
