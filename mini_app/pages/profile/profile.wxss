.container {
  min-height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* Êñ∞Âπ¥‰∏ªÈ¢òËÉåÊôØ */
.container[data-theme="newyear"] {
  background-color: #FFF8F0;
  background-image:
    radial-gradient(circle at 10% 20%, rgba(230, 57, 70, 0.08) 0%, transparent 40%),
    radial-gradient(circle at 90% 80%, rgba(255, 215, 0, 0.08) 0%, transparent 40%);
}

/* Áî®Êà∑‰ø°ÊÅØÂå∫Âüü */
.user-section {
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
  overflow: hidden;
}

.user-header {
  background: linear-gradient(135deg, #1989fa 0%, #667eea 100%);
  padding: 80rpx 0 60rpx;
  display: flex;
  align-items: center;
  position: relative;
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: 100%;
  box-sizing: border-box;
  transition: background 0.3s ease;
}

/* ‰∏ªÈ¢òÊ†∑Âºè */
.user-header[data-theme="agent"] {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.user-header[data-theme="vip"] {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
}

/* Êñ∞Âπ¥‰∏ªÈ¢òÁî®Êà∑Â§¥ÈÉ® */
.user-header[data-theme="newyear"] {
  background: linear-gradient(135deg, #E63946 0%, #C1121F 100%);
  box-shadow: 0 4rpx 20rpx rgba(230, 57, 70, 0.3),
              0 0 16rpx rgba(255, 215, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.user-header[data-theme="newyear"]::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.3) 0%, transparent 70%);
  animation: pulse 4s ease-in-out infinite;
}

.user-header[data-theme="newyear"]::after {
  content: 'üèÆ';
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  font-size: 80rpx;
  opacity: 0.2;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.2); opacity: 0.5; }
}

.user-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx 40rpx 0 0;
}

