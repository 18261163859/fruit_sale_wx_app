/* pages/commission-apply/commission-apply.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
  justify-content: flex-start;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 60rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.header-title {
  flex: 1;
  margin-left: 30rpx;
  margin-right: 20rpx;
  text-align: center;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.title-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.apply-btn {
  background: #ffffff;
  color: #667eea;
  border-radius: 50rpx;
  padding: 18rpx 28rpx;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.apply-btn::after {
  border: none;
}

.apply-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* 可用余额卡片 */
.balance-card {
  margin: -40rpx 15rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 35rpx 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
  position: relative;
  width: 100%;
}

.balance-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx 20rpx 0 0;
}

.balance-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
  width: 100%;
}

.balance-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.balance-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.balance-value.highlight {
  color: #667eea;
  font-size: 44rpx;
}

.balance-divider {
  width: 2rpx;
  height: 70rpx;
  background: linear-gradient(180deg, transparent, #e8e8e8, transparent);
}

/* 申请列表 */
.application-list {
  padding: 0 15rpx;
  width: 100%;
}

.application-item {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  width: 100%;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding-bottom: 24rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.amount-section {
  flex: 1;
}

.amount-label {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.amount-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.status-badge {
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
  white-space: nowrap;
}

.status-badge.status-pending {
  background: #fff7e6;
  color: #faad14;
}

.status-badge.status-approved {
  background: #f6ffed;
  color: #52c41a;
}

.status-badge.status-rejected {
  background: #fff2f0;
  color: #ff4d4f;
}

.status-badge.status-transferred {
  background: #e6f7ff;
  color: #1890ff;
}

.item-details {
  margin-top: 24rpx;
}

.detail-row {
  display: flex;
  padding: 10rpx 0;
  align-items: flex-start;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
  min-width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  word-break: break-all;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

.footer-item {
  flex: 1;
}

.footer-label {
  display: block;
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.footer-value {
  font-size: 24rpx;
  color: #666666;
}

.reject-reason {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff2f0;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff4d4f;
}

.reason-label {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.reason-text {
  font-size: 26rpx;
  color: #ff4d4f;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
  background: #ffffff;
  border-radius: 20rpx;
  margin: 0 15rpx;
}

.empty-icon-wrap {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-icon-text {
  font-size: 60rpx;
  color: #ffffff;
  font-weight: bold;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #cccccc;
  text-align: center;
  line-height: 1.6;
}

/* 申请弹窗 */
.apply-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  position: relative;
  width: 640rpx;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  position: relative;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 36rpx;
  color: #999999;
  padding: 10rpx;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
  flex: 1;
  -webkit-overflow-scrolling: touch;
}

.balance-tip {
  background: linear-gradient(135deg, #f0f0ff 0%, #e8e8ff 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.1);
}

.tip-label {
  font-size: 26rpx;
  color: #666666;
}

.tip-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #667eea;
  margin-left: 10rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background: #ffffff;
  border-color: #667eea;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-textarea:focus {
  background: #ffffff;
  border-color: #667eea;
}

.form-tips {
  padding: 20rpx 24rpx;
  background: #e6f7ff;
  border-radius: 12rpx;
  margin-top: 20rpx;
  border-left: 4rpx solid #1890ff;
}

.form-tips text {
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  background: #ffffff;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666666;
  border-radius: 16rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  border: none;
  text-align: center;
}

.cancel-btn::after {
  border: none;
}

.confirm-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  text-align: center;
}

.confirm-btn::after {
  border: none;
}
